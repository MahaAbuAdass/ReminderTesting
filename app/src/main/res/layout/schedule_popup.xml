<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="Topic"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_clear_24"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_topic"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Optional"
        android:textColorHint="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_add_time"
        android:text="Time"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_topic"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_time"
        android:timePickerMode="spinner"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_select_date"
        android:text="Select Date"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        />




<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Expected Call Time"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:id="@+id/tv_time"
    app:layout_constraintStart_toStartOf="parent"
    android:textSize="15sp"
    app:layout_constraintTop_toBottomOf="@id/tv_select_date"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_doorbell_24"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        android:hint="Time"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tt"
        android:text="We will send you a reminder 15 minutes before your booked call"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_time"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tt"
        android:background="@drawable/round_yellow"
        android:layout_marginTop="15dp"
        android:text="Send"/>

</androidx.constraintlayout.widget.ConstraintLayout>