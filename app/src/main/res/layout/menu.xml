<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:layout_alignParentRight="true"
            android:text="Edit"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_acc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Account"
        android:textStyle="bold"
        android:background="@drawable/round_yellow"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/tv_acc"
        app:layout_constraintStart_toStartOf="@id/tv_acc"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_person_white"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="@id/et_name"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_email_24"
        />
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="@id/et_email"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        />
    <EditText
        android:id="@+id/et_birthday"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/et_phone_number"
        app:layout_constraintStart_toStartOf="@id/et_phone_number"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        />

    <EditText
        android:id="@+id/et_gender"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/et_birthday"
        app:layout_constraintStart_toStartOf="@id/et_birthday"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_transgender_24"
        />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="More"
        android:textStyle="bold"
        android:background="@drawable/round_yellow"
        app:layout_constraintTop_toBottomOf="@id/et_gender"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_share"
        android:text="Share the app"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/tv_more"
        app:layout_constraintStart_toStartOf="@id/tv_more"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_screen_share_24"

        />
    <TextView
        android:id="@+id/tv_support"
        android:text="Support"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/tv_share"
        app:layout_constraintStart_toStartOf="@id/tv_share"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_support_agent_24"

        />

    <TextView
        android:id="@+id/tv_about"
        android:text="About"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/tv_support"
        app:layout_constraintStart_toStartOf="@id/tv_support"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_support_agent_24"
        />


    <TextView
        android:id="@+id/tv_logout"
        android:text="Logout"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/round_silver"
        app:layout_constraintTop_toBottomOf="@id/tv_about"
        app:layout_constraintStart_toStartOf="@id/tv_about"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/baseline_logout_24"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/error"
    />
</androidx.constraintlayout.widget.ConstraintLayout>