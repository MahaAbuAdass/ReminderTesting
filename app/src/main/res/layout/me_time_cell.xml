<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red"
  android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/tv_name_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/tv_time_m"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_name_m"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_m"
        app:layout_constraintStart_toEndOf="@id/tv_name_m"/>


    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/tv_status_m"
        android:layout_marginLeft="15dp"

        app:layout_constraintTop_toTopOf="@id/tv_time_m"
        app:layout_constraintBottom_toBottomOf="@id/tv_time_m"
        app:layout_constraintStart_toEndOf="@id/tv_time_m"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_schedule_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_double_arrow_24_yellow"
        />

</androidx.constraintlayout.widget.ConstraintLayout>