<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/red">

    <TextView
        android:text="first name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tv_i_first_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:text="phone number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tv_i_phone_number"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_i_first_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_i_first_name"
        app:layout_constraintStart_toEndOf="@id/tv_i_first_name"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_send"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_send_24"
        app:layout_constraintTop_toTopOf="@id/tv_i_phone_number"
        />







</androidx.constraintlayout.widget.ConstraintLayout>