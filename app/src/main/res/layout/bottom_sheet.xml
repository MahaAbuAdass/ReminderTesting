<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tv_name"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="UserName"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic :"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:id="@+id/tv_topic"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_topic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Topic"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_topic"
        app:layout_constraintTop_toTopOf="@id/tv_topic"
        app:layout_constraintBottom_toBottomOf="@id/tv_topic"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date / Time :"
        android:id="@+id/date_time"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_topic"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_date_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Date / Time "
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/date_time"
        app:layout_constraintTop_toTopOf="@id/date_time"
        app:layout_constraintBottom_toBottomOf="@id/date_time"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration :"
        android:id="@+id/Duration"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@id/date_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Duration"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/Duration"
        app:layout_constraintTop_toTopOf="@id/Duration"
        app:layout_constraintBottom_toBottomOf="@id/Duration"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/btn_accept"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Duration"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_marginStart="30dp"
        android:id="@+id/btn_reject"
        android:textColor="@color/white"

        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toTopOf="@id/btn_accept"
        app:layout_constraintStart_toEndOf="@id/btn_accept"
        app:layout_constraintBottom_toBottomOf="@id/btn_accept"
       app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Re-Schedule"
        android:id="@+id/btn_re_schedule"
        android:backgroundTint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>